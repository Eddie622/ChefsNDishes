@model Dish

@{
    ViewData["Title"] = "Home Page";
}

<h1>Add A Dish!</h1>

<form asp-action="ProcessAddDish" asp-controller="Home" method="post">
    <span asp-validation-for="DishName"></span>
    <label asp-for="DishName"></label>
    <input asp-for="DishName"><br><br>

    <label asp-for="ChefId">Chef:</label>
    <select asp-for="ChefId">
        @{
            foreach(var Chef in ViewBag.AllChefs)
            {
                <option value="@Chef.ChefId">@Chef.FirstName @Chef.LastName</option>
            }
        }
    </select><br><br>

    <span asp-validation-for="Tastiness"></span>
    <label asp-for="Tastiness"></label>
    <select asp-for="Tastiness">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
    </select><br><br>

    <span asp-validation-for="Calories"></span>
    <label asp-for="Calories"></label>
    <input asp-for="Calories"><br><br>

    <span asp-validation-for="Description"></span>
    <label style="vertical-align:top;" asp-for="Description"></label>
    <textarea asp-for="Description"></textarea><br><br>

    <input value="Add Dish" type="submit">    
</form>

